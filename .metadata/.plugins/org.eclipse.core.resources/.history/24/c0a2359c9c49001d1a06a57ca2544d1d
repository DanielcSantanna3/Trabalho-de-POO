package applicacao;

import java.util.Scanner;

public class Tela {
	
	public static void main(String[] args) {
	}
	public double telaInicial;
	
	public String iniciarJogo() {
	Scanner scanner = new Scanner(System.in);
	System.out.println("SEJA BEM VINDO AO HEROS OF POO! SELECIONE UMA DAS OPÇÕES ABAIXO!");
	System.out.println("COMEÇAR O JOGO(Digite 1)");
	System.out.println("SAIR DO JOGO(Digite 2)");
	this.telaInicial = scanner.nextDouble();
			if (this.telaInicial == 1) {
				System.out.println("Você iniciou o Jogo Heros of Poo!");
			}
			else {
				System.out.println("Você saiu do Jogo Heros of Poo!");
			}
			return this.telaInicial;
	}
	
}
	
	

	
	
	
	
	